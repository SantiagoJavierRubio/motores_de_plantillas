extends layout.pug

block contenido
    h1 Ingrese un producto
    form(method="POST" action="/productos" class="mt-4")
        div(class="mb-3")
            label(for="title" class="form-label") Title
            input(type="text" class="form-control" name="title" id="title")
        div(class="mb-3")
            label(for="price" class="form-label") Price
            input(type="number" step="0.01" min=0 class="form-control" name="price" id="price")
        div(class="mb-3")
            label(for="thumbnail" class="form-label") Thumbnail
            input(type="text" class="form-control" name="thumbnail" id="thumbnail")
        button(class="btn btn-primary") Submit
    div(class="mt-4")
        a(href="/productos") Ver listado de productos

